@*@model JZWineNB.viewmodels.CommentWineVM*@


<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
<link rel="stylesheet" href="~/Content/fontawesome-stars.css" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="~/Scripts/jquery-1.11.2.min.js"></script>
<script src="~/Scripts/jquery.barrating.min.js"></script>

<div class="form-group">

    @*@Html.Label("Rate", htmlAttributes: new { @class = "control-label col-md-4" })*@
   
        <select id="Rate" name="Rate" data-current-rating=@Model>
            <option value=""></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
   
</div>
<script type="text/javascript">

        $(function () {
            $('#Rate').each(function (Index, el) {
                var $El = $(el);
                $El.barrating({
                    theme: 'fontawesome-stars',
                    allowEmpty: true,
                    initialRating: $El.attr('data-current-rating'),                    
                })
            })
        })


</script>



