                <dt>
                    @Html.DisplayNameFor(model => model.RateOverall)
                </dt>

                <dd>
                    @*@Html.DisplayFor(model => model.RateOverall)*@
                    @{
                        var idRatea = Html.ValueFor(model => model.RateOverall);
                    }
                    @Html.Partial("_wineRate", idRatea)
                </dd>
               

            </dl>
        </div>
        <div class="col-xs-3">
            <div class="form-group">
                <div class="col-xs-3 text-center">
                    <img src="@Url.Content(Model.WineImage)" height="300" style="border:double" />
                </div>
            </div>
        </div>

    </div> @*/*end of container*/*@
    <br/>

    <table class="table">
        <tr>
            <th> </th>
            <th>Drinker</th>
            <th>Rate</th>
            <th>Comment</th>
        </tr>
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td><img src="@Url.Content(item.Drinker.DrinkerImage)" height="25" width="15" /></td>
                <td>@Html.DisplayFor(m => item.Drinker.Alias)</td>
                <td>@*@Html.DisplayFor(m => item.Rate)*@
                    @{
                        var commentRate = Html.ValueFor(m => item.Rate);
                    }
                    @Html.Partial("_wineRate", commentRate)
                </td>
                <td>@Html.DisplayFor(m => item.Comment1)</td>
            </tr>
                        }

    </table>
</div>
